<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andrewang.workoutapp">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/workout"
        android:label="@string/app_name"
        android:roundIcon="@drawable/workout"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InspirationQuoteActivity"></activity>
        <activity android:name=".MuscleGroupActivity"></activity>
        <activity android:name=".ViewWeeklyPlanActivity"></activity>
        <activity android:name=".DailyPlanActivity"></activity>
    </application>

</manifest>